{
	"name": "Hourglass",
	"description": "This extension track how much time you cost in every domain",
	"icons": {"128": "icon.jpg", "48": "icon48.jpg"},
	"version": "0.5",
	"permissions": ["tabs", "<all_urls>"],
	"background": {
		"page": "background.html"
	},
	"manifest_version": 2,
	"options_page": "options.html",
	"browser_action": {
		"default_title": "Hourglass",
		"default_icon": "icon.jpg",
		"default_popup": "popup.html"
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["js/contentscript.js"]
	}]
}
